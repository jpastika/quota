<% provide(:title, "Update Catalog Item") %>

<h1>Update Catalog Item</h1>
<div class="row">
	<div class="span6 offset3">
		<%= simple_form_for(@catalog_item, :url => catalog_item_path(@catalog_item.pub_key)) do |f| %>
			<%= render 'fields', f: f %>
			<div class="form-actions">
			    <%= f.submit nil, :class => 'btn btn-primary' %>
				<%= link_to 'Cancel', catalog_items_path, :class => 'btn' %>
			</div>
		<% end %>
	</div>
</div>
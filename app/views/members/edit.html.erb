<% provide(:title, "Update Member")%>
<div class="span10">
	<% flash.each do |key, value| %>
		<div class="alert alert-<%= key %> fade in">
	      <a class="close" data-dismiss="alert" href="#">&times;</a>
	      <%= value %>
	    </div>
	<% end %>
	<h1>Add Member</h1>
	
	<%= simple_form_for(@member, :url => member_path(@member.pub_key)) do |f| %>
		<% if @member.user.errors.any? %>
			<div class="alert alert-error fade in">
		      <a class="close" data-dismiss="alert" href="#">&times;</a>
		      Please review errors below.
		    </div>
		<% end %>
		<%= simple_fields_for :user, @member.user do |u| %>
			<%= u.input :name %>
			<%= u.input :email %>
			<%= u.input :password %>
		<% end %>
		<%= f.button :submit, "Update member", class: "btn btn-large btn-primary" %>
	<% end %>
		
</div>
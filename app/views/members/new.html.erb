<% provide(:title, "Add Member")%>
<h1>Add Member</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@member) do |f| %>
			<% if @member.user.errors.any? %>
			  <div id="error_explanation">
			    <div class="alert alert-error">
			      The form contains <%= pluralize(@member.user.errors.count, "error") %>.
			    </div>
			    <ul>
			    <% @member.user.errors.full_messages.each do |msg| %>
			      	<%# if !msg.include? 'digest' %>
						<li>* <%= msg %></li>
					<%# end %>
			    <% end %>
			    </ul>
			  </div>
			<% end %>
			<%= fields_for :user, @member.user do |u| %>
				<%= u.label :name %>
				<%= u.text_field :name %>
			
				<%= u.label :email %>
				<%= u.text_field :email %>
			
				<%= u.label :password %>
				<%= u.password_field :password %>
			<% end %>
			<%= f.submit "Add member", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
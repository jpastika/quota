<div class="control-group val">
	<span class="controls contact_method_name">
		<input type="text" class="input-small" name="phones[][name]" value="{{contact_phone.name}}" placeholder="Mobile">
	</span>
	<span class="controls contact_method_val">
		<input type="text" class="input-medium" name="phones[][val]" value="{{contact_phone.val}}" placeholder="111-111-1111">
	</span>
	<span class="controls contact_method_remove btn btn-mini btn-danger">
		<i class="icon-minus"></i>
	</span>
	<input type="hidden" class="input-small" name="phones[][pub_key]" value="{{contact_phone.pub_key}}">
</div>
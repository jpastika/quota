<div class="well well-small">
	<table width="100%" cellpadding="0" cellspacing="0" border="0">
		<tr>
			<td width="50">
				<i class="contact_type {{contact_type.icon_class}}"></i>
			</td>
			<td width="*">
				<span class="contact_link"><a href="contacts/{{contact.pub_key}}">{{contact.name}}</a></span>
				{{#if contact.company}}
					<br>{{contact.company.name}}
				{{/if}}
			</td>
			<td width="25%">
				{{#if phones}}
				<ul class="phone_list">
				  {{#each phones}}
				  <li>{{this.name}}: {{this.val}}</li>
				  {{/each}}
				</ul>
				{{/if}}
			</td>
			<td width="35%">
				{{#if phones}}
				<ul class="email_list">
				  {{#each emails}}
				  <li>{{this.name}}: {{this.val}}</li>
				  {{/each}}
				</ul>
				{{/if}}
			</td>
			<td width="25">
				<button class="btn btn-mini btn-danger contact_remove">
			  		<i class="icon-remove"></i>
				</button>
			</td>
		</tr>
	</table>
</div>
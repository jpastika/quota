	<input type="text" name="document_item[total]" value="" class="document_item_total align-right" placeholder="item total" title="Item Total">
</td>
<td width="8%">
	<select name="document_item[total_unit]" label="false" class="document_item_total_unit" placeholder="per" title="Per">

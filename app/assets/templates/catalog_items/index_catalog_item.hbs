<div class="catalog-item">
<table class="" width="100%" cellspacing="0" cellpadding="0">
	<tbody>
		<td width="3%">
			{{#if catalog_item.is_package}}<i class="icon-sort-down"></i>{{/if}}
		</td>
		<td width="20%">
			<b>{{catalog_item.name}}</b>
		</td>
		<td width="12%">
			{{catalog_item.manufacturer}}
		</td>
		<td width="32%">
			{{catalog_item.description}}
		</td>
		<td width="10%">
			{{catalog_item.part_number}}
		</td>
		<td width="10%" class="align-right">
			<span class="catalog_item_unit_price align-right">{{catalog_item.list_price}}</span>
		</td>
		<td width="10%">
			{{catalog_item.list_price_unit}}&nbsp;
		</td>
		<td width="3%">
			<i class="icon-remove"></i>
		</td>
	</tbody>
</table>
</div>
{{#if catalog_item.is_package}}
<div class="catalog-item-children" style="display:none;">
	<ul>
	</ul>
</div>
{{/if}}
<div class="section-heading">
	<h3>Opportunity Details</h3>
</div>
<div class="row-fluid">
<div class="span6">
<div class="control-group string required">
	<label for="catalog_item_name" class="string required control-label">Name</label>
	<div class="controls">
		<input type="text" value="{{catalog_item.name}}" size="30" name="catalog_item[name]" id="catalog_item_name" class="string required">
	</div>
</div>
<div class="control-group">
	<label for="catalog_item_description" class="string control-label">Description</label>
	<div class="controls">
		<textarea name="catalog_item[description]" id="catalog_item_description" class="string">{{catalog_item.description}}</textarea>
	</div>
</div>
<div class="control-group">
	<label for="catalog_item_list_price" class="string control-label">List Price</label>
	<div class="controls catalog_item_list_price">
		<div class="input-prepend">
			<span class="add-on">$</span>
			<input type="text" value="{{catalog_item.list_price}}" name="catalog_item[list_price]" id="catalog_item_list_price" class="string input-small">
			<select class="input-medium" name="catalog_item[recurring_interval]" value="{{catalog_item.recurring_interval}}">
				<option value="ONETIME">one time</option>
				<option value="HOUR">per hour</option>
				<option value="DAY">per day</option>
				<option value="WEEK">per week</option>
				<option value="MONTH">per month</option>
				<option value="QUARTER">per quarter</option>
				<option value="YEAR">per year</option>
			</select>
		</div>
	</div>
</div>
</div>
<div class="span1"></div>
<div class="span5">
<div class="control-group">
	<label for="opportunity_owner_key" class="string required control-label">Owner</label>
	<div class="controls opportunity_owner_key" id="users"></div>
</div>
<div class="control-group">
	<label for="opportunity_milestone_key" class="string control-label">Milestone</label>
	<div class="controls opportunity_milestone_key" id="milestones"></div>
</div>
<div class="control-group">
	<label for="opportunity_probability" class="string control-label">Probability of Close</label>
	<div class="controls opportunity_probability">
		<div class="input-append">
			<input type="text" value="{{opportunity.probability}}" name="opportunity[probability]" id="opportunity_probability" class="string input-min">
			<span class="add-on">%</span>
		</div>
	</div>
</div>
<div class="control-group">
	<div class="span4">
		<label>&nbsp;</label>
		<div class="controls opportunity_is_sold">
			<input type="checkbox" value="{{opportunity.is_sold}}" name="opportunity_is_sold" id="opportunity_is_sold" class="">
		&nbsp;is sold?
		</div>
	</div>
	<div class="span8">
		<label for="opportunity_actual_close" class="string control-label">Actual Close Date</label>
		<div class="controls opportunity_actual_close">
			<div class="input-append">
				<input type="text" value="{{opportunity.actual_close}}" name="opportunity_actual_close" id="opportunity_actual_close_dp" class="string input-medium datepicker">
				<span class="add-on"><i class="icon-calendar"></i></span>
				<input type="hidden" value="{{opportunity.actual_close}}" name="opportunity[actual_close]" id="opportunity_actual_close" class="string input-small altfield">
			</div>
		</div>
	</div>
</div>
<div class="control-group">
	<div class="span4">
	<label>&nbsp;</label>
	<div class="controls opportunity_is_cancelled">
		<input type="checkbox" value="{{opportunity.is_cancelled}}" name="opportunity_is_cancelled" id="opportunity_is_cancelled" class="">
		&nbsp;is cancelled?
	</div>
	</div>
	<div class="span8">
	<label for="opportunity_actual_cancel" class="string control-label">Cancellation Date</label>
	<div class="controls opportunity_actual_cancel">
		<div class="input-append">
			<input type="text" value="{{opportunity.actual_cancel}}" name="opportunity_actual_cancel" id="opportunity_actual_cancel_dp" class="string input-medium datepicker">
			<span class="add-on"><i class="icon-calendar"></i></span>
			<input type="hidden" value="{{opportunity.actual_cancel}}" name="opportunity[actual_cancel]" id="opportunity_actual_cancel" class="string input-small altfield">
		</div>
	</div>
	</div>
</div>
<input type="hidden" value="{{opportunity.company_key}}" name="opportunity[company_key]" id="opportunity_company_key" class="company_key">
</div>
</div>